{% extends 'layouts/main.j2' %}
{% block content %} 
    <h2> All Dogs </h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Image</th>
                <th>Gender</th>
                <th>Availability</th>
                <th colspan="3">Actions</th>
            </tr>
    </table>
    {% for dog in dogs %}
        <p>{{ dog['name'] }}</p>
        <p> <img src="data:;base64,{{ base64.b64encode(dog.img).decode() }}" width="200" height="120" alt="img"></p>
    {% endfor %}
    <p><button onclick="location.href='/admin_new_pets'">Add new pet</button></p>
{% endblock %}