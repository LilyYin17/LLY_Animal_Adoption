{% extends 'layouts/main.j2' %}
{% block content %} 
    <h2> All Dogs </h2>
    <table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Gender</th>
            <th>Availability</th>
            <th colspan="3">Actions</th>
        </tr>

        <tbody>
        {% for dog in dogs %}
            <tr>
                <td>{{ dog['petsID'] }}</td>
                <td>{{ dog['name'] }}</td>
                <td><img src="data:;base64,{{ base64.b64encode(dog.img).decode() }}" width="200" height="120" alt="img"></td>
                <td>{{ dog['gender'] }}</td>
                <td>{{ dog['availability'] }}</td>
                <td><input type='button' name='View' value='View' onclick="window.location ='/admin_view_details/{{ dog['petsID'] }}'"> </td>
                <td><input type='button' name='Edit' value='Edit' onclick="window.location ='/admin_update_details/{{ dog['petsID'] }}'"> </td>
                <td><input type='button' name='Delete' value='Delete' onclick="window.location ='#'"> </td>
            </tr>
        {% endfor %}
    </table>
    <br><p><button onclick="location.href='/admin_new_pets'">Add new pet</button></p>
{% endblock %}