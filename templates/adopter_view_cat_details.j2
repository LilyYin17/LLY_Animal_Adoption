{% extends 'layouts/main.j2' %}
{% block content %} 
    {% for cat in cats %}
        <div class="petsDetail_img">
            <img src="data:;base64,{{ base64.b64encode(cat.img).decode() }}" class="petsDetails" width="600" height="500" alt="img">
        </div>
        <div class="petsDetail_info">
        <h2>{{ cat.name }}</h2>
        </div>
    {% endfor %}
{% endblock %}