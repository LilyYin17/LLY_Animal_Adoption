<!DOCTYPE html>
<html lang="en">
    <head>
        <title>LLY Adoption Center</title>
        <link rel="stylesheet" href="{{ url_for('static', filename='/style.css') }}">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="header"><h1>LLY Adoption Center</h1></div>
        <ul id="header-ul">
            {% if session['shelter_loggedin'] %}
                <li><a href="/shelter_home">Shelter Home</a></li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Manage Pets</a>
                    <div class="dropdown-content">
                        <a href="/cats_archive">Manage Cats</a>
                        <a href="/dogs_archive">Manage Dogs</a>
                        <a href="/others_archive">Manage Others</a>
                    </div>
                </li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Find A Pet</a>
                    <div class="dropdown-content">
                        <a href="/admin_find_a_cat">Find A Cat</a>
                        <a href="/admin_find_a_dog">Find A Dog</a>
                        <a href="/admin_find_other_pet">Find Another Pet</a>
                    </div>
                </li>
                <li><a href="/admin_new_pets">Add New Pet</a></li>
                <li style="float:right;"><a href="/logout">Sign Out</a></li>

            {% elif session['adopter_loggedin'] %}
                <li><a href="/adopter_home">Adopter Home</a></li>
                <li><a href="/customer_find_your_pet">Find Your Pet</a></li>
                <li style="float:right;"><a href="/profile/{{ session['userID'] }}">Profile</a></li>
                <li style="float:right;"><a href="/logout">Sign Out</a></li>
{#
                <a href="/adopter_home">Adopter Home</a>
                <a href="/adopter_find_a_dog">Find A Dog</a>
                <a href="/adopter_find_a_cat">Find A Cat</a>
                <a href="/adopter_find_other_pet">Find Other Pet</a>
                <div class="topnav-right">
                    <a href="#"><img src="/static/images/favorites.png" class="favImg" style="width:24px;height:20px;"></a>
                    <a href="/profile/{{ session['userID'] }}">Profile</a>
                    <a href="/logout">Sign Out</a>
                </div>
#}
            {% else %}
                <li><a href="/">Shelter Home</a></li>
                <li><a href="/">Adopter Home</a></li>
                <li style="float:right;"><a href="/signup">Sign Up</a></li>

            {% endif %}
        </ul>

        <div class ="content">
            {% block content %}{% endblock %}
        </div>
    </body>
</html>